<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <listener>
        <listener-class>ApplicationListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet</url-pattern>
    </servlet-mapping>
   <servlet>
       <servlet-name>CreateEssayServlet</servlet-name>
       <servlet-class>CreateEssayServlet</servlet-class>
   </servlet>
    <servlet-mapping>
        <servlet-name>CreateEssayServlet</servlet-name>
        <url-pattern>/CreateEssayServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowEssayServlet</servlet-name>
        <servlet-class>ShowEssayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowEssayServlet</servlet-name>
        <url-pattern>/ShowEssayServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateEssayServlet</servlet-name>
        <servlet-class>UpdateEssayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateEssayServlet</servlet-name>
        <url-pattern>/UpdateEssayServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AllEssayServlet</servlet-name>
        <servlet-class>AllEssayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllEssayServlet</servlet-name>
        <url-pattern>/AllEssayServlet</url-pattern>
    </servlet-mapping>
</web-app>